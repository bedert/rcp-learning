<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.example.addressbook.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="com.example.addressbook.perspectives.AddressPerspective"
            id="com.example.addressbook.Addresses">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.example.addressbook.views.AddressList"
            id="com.example.addressbook.AddressList"
            name="%view.name"
            restorable="true">
      </view>
      <view
            class="com.example.addressbook.views.AddressView"
            id="com.example.addressbook.Address"
            name="%view.name.0"
            restorable="true">
      </view>
   </extension>
   <extension
         id="AddressBook"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.example.addressbook.application"
            name="AddressBook">
         <property
               name="appName"
               value="AddressBook">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="%menu.label">
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="%command.label"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  label="%command.label.0"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator1">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.close"
                  label="%command.label.1"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.closeAll"
                  label="%command.label.2"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator2">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.refresh"
                  label="%command.label.3"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator3">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="%command.label.4"
                  style="push">
            </command>
         </menu>
         <menu
               label="%menu.label.0">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  label="%command.label.5"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  label="%command.label.6"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator4"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  label="%command.label.7"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="%command.label.8"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="%command.label.9"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator5"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  label="%command.label.10"
                  style="push">
            </command>
         </menu>
         <menu
               label="%menu.label.1">
            <command
                  commandId="org.eclipse.ui.help.helpContents"
                  label="%command.label.11"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.helpSearch"
                  label="%command.label.12"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.dynamicHelp"
                  label="%command.label.13"
                  style="push">
            </command>
         </menu>
         <menu
               label="%menu.label.2">
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  label="%command.label.17"
                  style="push">
            </command>
            <separator
                  name="com.example.addressbook.separator1">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="%command.label.18"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.example.addressbook.toolbar1">
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="%command.label.14"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.refresh"
                  label="%command.label.15"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.example.addressbook.AddressList">
         <command
               commandId="org.eclipse.ui.edit.delete"
               label="%command.label.16"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.example.addressbook.handler.RefreshHandler"
            commandId="org.eclipse.ui.file.refresh">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="com.example.addressbook.AddressList">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="com.example.addressbook.handler.DeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="selection">
               <iterate>
                  <instanceof
                        value="com.example.addressbook.entities.Address">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>
   </extension>

</plugin>
